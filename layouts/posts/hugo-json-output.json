{{- $blog := slice -}}
{{- $v1 := where site.RegularPages.ByPublishDate.Reverse "Section" "==" "posts" -}}
{{- $v2 := where .Site.Pages ".Params.location" "!=" nil -}}
{{- $filtered := $v1 | intersect $v2 -}}
{{- range $filtered  -}}
	{{- $item := dict
    "Title" .Title
    "PublishDateFormatted" (.PublishDate.Format "2006-01-02")
    "RelPermalink" .RelPermalink
    "Location" .Params.location
    "latitude" .Params.latitude
    "longitude" .Params.longitude
    "image" .Params.cover
 -}}

	{{- $blog = $blog | append $item -}}
{{- end -}}

{{- $object := dict "data" $blog -}}
{{- $object | jsonify -}}